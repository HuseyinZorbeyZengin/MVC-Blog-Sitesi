@model IEnumerable<BlogSitesi.Models.Makale>
@{
    ViewBag.Title = "YazarListesi";
}

<div class="container">
    <br />
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Admin/Index">Admin Sayfası</a></li>
            <li class="breadcrumb-item active" aria-current="page">Yazar Listesi</li>
        </ol>
    </nav>
    @if (Model.Count() == 0)
    {


        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>Uyarı!</strong> Kayıt bulunamadı...
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    else
    {
        <table class="table">
            <tr>

                <th>
                    <h5>Kullanıcı Adı</h5>
                </th>
                <th>
                    <h5>Başlık</h5>
                </th>
                <th>
                    <h5>Açıklama</h5>
                </th>
                <th>

                </th>
                <th>

                </th>
                <th>
                    <h5>Tarih</h5>
                </th>
                <th>
                    <h5>Onay</h5>
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <label class="btn btn-primary btn-sm">@item.KullaniciAdi</label>
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Baslik)
                    </td>
                    <td>
                        @if (item.Aciklama.Length > 20)
                        {
                            <p>@item.Aciklama.Substring(0, 30):(...)</p>
                        }
                        else
                        {
                            @item.Aciklama
                        }
                    </td>


                    <td>
                        @item.YayinTarihi.ToString("dd-MM-yyyy")
                    </td>
                    <td>
                        @if (item.Onay)
                        {
                            <label class="btn btn-success btn-sm"><i class="bi bi-check-circle-fill"></i> Evet</label>
                        }
                        else
                        {
                            <label class="btn btn-danger btn-sm"><i class="bi bi-x-circle-fill"></i> Hayır</label>
                        }
                    </td>
                    <td>
                        <a class="btn btn-outline-primary" href="@Url.Action("Edit","Makale",new { id=item.ID })"><i class="bi bi-pencil-square"></i> Düzenle</a>
                        <a class="btn btn-outline-danger" href="@Url.Action("Delete","Makale",new { id=item.ID })"><i class="bi bi-trash-fill"></i> Sil</a>
                    </td>
                </tr>
            }

        </table>
    }
</div>

