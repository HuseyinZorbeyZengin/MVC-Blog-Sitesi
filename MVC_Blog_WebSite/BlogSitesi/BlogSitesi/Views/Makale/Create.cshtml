@model BlogSitesi.Models.Makale

@{
    ViewBag.Title = "Create";
}

<div class="container">
    <br />
    @using (Html.BeginForm("Create", "Makale", FormMethod.Post, new { enctype = "multipart/Form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row mb-3" style="text-align:center">
                @Html.LabelFor(model => model.KullaniciAdi, "Kullanıcı Adı", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-1">
                    <label class="btn btn-success">@User.Identity.Name</label>
                </div>
            </div>

            <div class="row mb-3" style="text-align:center">
                @Html.LabelFor(model => model.Baslik, "Başlık", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Baslik, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Baslik, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3" style="text-align:center">
                @Html.LabelFor(model => model.Aciklama, "Açıklama", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.TextAreaFor(model => model.Aciklama, new { @class = "form-control", @rows = 4 })
                    @Html.ValidationMessageFor(model => model.Aciklama, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3" style="text-align:center">
                @Html.LabelFor(model => model.Resim, "Resim", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    <input type="file" name="File" class="form-control" />
                    @Html.ValidationMessageFor(model => model.Resim, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3" style="text-align:center; display:none;">
                @Html.LabelFor(model => model.GoruntulenmeSayisi, "Görüntülenme", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.GoruntulenmeSayisi, new { htmlAttributes = new { @class = "form-control", @Value = 0 } })
                    @Html.ValidationMessageFor(model => model.GoruntulenmeSayisi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3" style="text-align:center">
                @Html.LabelFor(model => model.YayinTarihi, "Yayın Tarihi", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.YayinTarihi, new { htmlAttributes = new { @class = "form-control datepicker" } })
                    @Html.ValidationMessageFor(model => model.YayinTarihi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3" style="text-align:center">
                @Html.LabelFor(model => model.Onay, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-1">
                    <div class="form-check">
                        @Html.CheckBoxFor(model => model.Onay, new { @class = "form-check-input" })
                        @Html.ValidationMessageFor(model => model.Onay, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row mb-3" style="text-align:center">
                @Html.LabelFor(model => model.KategoriID, "Konu Adı", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.DropDownList("KategoriID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.KategoriID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3" style="text-align:center">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-outline-success"><i class="bi bi-plus-circle-fill"></i> Ekle</button>
                    <a href="/Makale/Index" class="btn btn-outline-warning"><i class="bi bi-card-list"></i> Makale Listesi</a>
                </div>
            </div>
        </div>
    }
</div>

<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />

<script src="~/Scripts/jquery-1.12.4.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@section script{
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <script>
        $(document).ready(function () {
            $(".datepicker").datepicker({
                dateFormat: "yy-mm-dd",
                changeMonth: true,
                changeYear: true,
                yearRange: '2015:2021'
            });
        });
    </script>
}
